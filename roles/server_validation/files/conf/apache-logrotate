#Rotate all log files the same way
/opt/cox/log/apache/*1 {
  compress
  missingok
  nocopytruncate
  nomail
  rotate 5
  daily
  sharedscripts
  postrotate
     nice /etc/init.d/apache cleanup 14 5 > /opt/cox/log/apache/cleanup.log
  endscript
}

